<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:background="@color/fondo"
    tools:context=".HabitoTrabajarActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/habito_a_trabajar"
        android:textColor="@color/titulos"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/box"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/bebe_agua"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/hazlo_3_veces_esta_semana_para_lograrlo"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageviewCerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_baseline_close_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="85dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAgua1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/circle_button"
                android:text="1"
                android:layout_marginRight="5dp"
                android:textColor="@color/titulos"
                app:cornerRadius="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnAgua2"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/circle_button"
                android:text="2"
                android:layout_marginRight="5dp"
                android:textColor="@color/titulos"
                app:cornerRadius="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnAgua3"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/circle_button"
                android:text="3"
                android:layout_marginRight="5dp"
                android:textColor="@color/titulos"
                app:cornerRadius="30dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_azul_button"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtTitulo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/motivador"
                android:textColor="@color/titulos"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDetalle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/el_experimento_secreto"
                android:textColor="@color/titulos"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageviewFoco"
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_emoji_objects_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="85dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtLeerMas"
                android:layout_width="wrap_content"
                android:text="Leer mÃ¡s"
                android:layout_height="match_parent"
                android:textColor="@color/titulos"
                android:layout_marginTop="20dp"
                android:textStyle="italic"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/txtFrase1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="@string/empieza_donde_estas"
            android:textColor="@color/titulos"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtFrase2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/usa_lo_que_tienes"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/titulos"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtFrase3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/haz_lo_que_puedas"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:textColor="@color/titulos"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtAutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/artur_ashse"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:layout_marginEnd="20dp"
            android:textColor="@color/titulos"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textStyle="italic"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/btnCompartir"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="95dp"
            android:backgroundTint="@color/btnFuerte"
            android:text="@string/btn_compartir_cita"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="40dp" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="115dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/solecito" />

</LinearLayout>
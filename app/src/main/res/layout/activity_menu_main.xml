<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:padding="30dp"
    tools:context=".MenuMain">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/solecito" />

    <TextView
        android:id="@+id/txtTitulo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:textColor="@color/degradadoNaranja"
        android:textSize="40sp"
        android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/btnClaro"
        android:text="@string/iniciar_sesion"
        android:textAllCaps="false"
        android:textColor="@color/letraOscura"
        app:cornerRadius="40dp"/>

    <Button
        android:id="@+id/btnRediRegistrarse"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:backgroundTint="@color/btnFuerte"
        android:text="@string/btn_registrarse"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="40dp" />


</LinearLayout>
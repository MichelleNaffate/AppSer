<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:orientation="vertical"
    tools:context=".MenuOpciones">
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-45dp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:text="@string/titulo"
        android:textColor="@color/titulos"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnHabitoTrabajar"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/btnFuerte"
        android:textSize="15sp"
        android:text="@string/habito_a_trabajar"
        android:textColor="@color/white"
        app:cornerRadius="40dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnActividades"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/btnFuerte"
        android:text="@string/actividades"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:cornerRadius="40dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnRecomendaciones"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/btnFuerte"
        android:textSize="15sp"
        android:text="@string/recomendaciones"
        android:textColor="@color/white"
        app:cornerRadius="40dp"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/tu_rutina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="65dp"
        android:text="@string/tus_rutinas"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/hoy"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="185dp"
        android:text="@string/hoy"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/hora" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/hora" />

    </LinearLayout>
    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginTop="0dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/btnFuerte"
        android:text="@string/ritual_matutino"
        android:textColor="@color/white"
        app:cornerRadius="40dp"
        android:textAllCaps="false"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="115dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/solecito" />

</LinearLayout>
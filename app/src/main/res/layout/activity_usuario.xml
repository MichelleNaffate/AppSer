<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context=".UsuarioActivity">

  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/navegar"
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_navigate_before_24"
            app:tint="@color/cafecito"
            android:contentDescription="TODO" />

      <TextView
          android:id="@+id/nombre_Usuario"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:layout_marginRight="30dp"
          android:text="Mimi"
          android:textColor="@color/titulos"
          android:textSize="30sp"
          android:textStyle="bold" />

  </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id ="@+id/perfilUsuario"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src = "@drawable/perfil"
        app:civ_border_width= "2dp"
        android:elevation="8dp"
        android:layout_marginTop="30dp"
        app:civ_border_color="@color/cafecito"

        android:layout_gravity="center_horizontal"/>


    <Button
        android:id="@+id/btnAjustes"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/btnFuerte"
        android:textSize="15sp"
        android:elevation="5dp"
        android:text="@string/ajustes"
        android:textColor="@color/white"
        app:cornerRadius="40dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnAyuda"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:backgroundTint="@color/btnFuerte"
        android:textSize="15sp"
        android:elevation="5dp"
        android:text="@string/ayuda"
        android:textColor="@color/white"
        app:cornerRadius="40dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="232dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:backgroundTint="@color/btnFuerte"
        android:text="@string/cerrar_sesion"
        android:textAllCaps="false"
        android:elevation="5dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:cornerRadius="40dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/logoser" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
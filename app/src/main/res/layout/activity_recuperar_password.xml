<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="40dp"
    android:background="@color/fondo"
    tools:context=".RecuperarPasswordActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="115dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/sol3"/>

    <EditText
        android:id="@+id/edit_recuperaContra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="@string/correo_elecetronico"
        android:textStyle="italic"
        android:textColorHint="@color/cafecito"
        android:textColorHighlight="@color/cafecito"
        android:layout_marginTop="15dp"
        android:textColor="@color/titulos"/>

    <Button
        android:id="@+id/btnCambioContra"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/btnFuerte"
        android:text="@string/btncambiarContra"
        android:elevation="5dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="30dp" />
</LinearLayout>